{
  "name": "portfolio-ui",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "puppeteer": "^24.34.0",
    "tailwindcss": "^3.4.19"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./web/tailwind.css -o ./web/static/dist.css --minify",
    "dev:css": "tailwindcss -i ./web/tailwind.css -o ./web/static/dist.css --watch",
    "build": "npm run build:css && go run build.go",
    "preview": "cd dist && python3 -m http.server 8080",
    "generate:resume": "node scripts/generate-resume-pdf.js"
  }
}
